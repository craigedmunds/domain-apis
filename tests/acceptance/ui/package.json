{
  "name": "domain-api-poc-acceptance-tests",
  "version": "1.0.0",
  "description": "Acceptance tests for Domain API POC using Playwright",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:explorer": "playwright test ui/api-explorer.spec.ts",
    "test:docs": "playwright test ui/documentation.spec.ts",
    "test:gateway": "playwright test gateway/gateway-api.spec.ts",
    "test:skipped": "RUN_SLOW_TESTS=true playwright test --grep @slow",
    "test:skipped:headed": "RUN_SLOW_TESTS=true playwright test --grep @slow --headed",
    "report": "playwright show-report",
    "codegen": "playwright codegen"
  },
  "keywords": [
    "playwright",
    "acceptance-tests",
    "e2e",
    "api-testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.11.0"
  }
}
