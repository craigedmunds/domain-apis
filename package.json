{
  "name": "domain-api-poc",
  "version": "1.0.0",
  "description": "Proof-of-concept for multi-API domain architecture representing UK tax system",
  "private": true,
  "scripts": {
    "validate": "node tools/validate.js",
    "validate:taxpayer": "openapi-validator specs/taxpayer/taxpayer-api.yaml",
    "validate:income-tax": "openapi-validator specs/income-tax/income-tax-api.yaml",
    "validate:payment": "openapi-validator specs/payment/payment-api.yaml",
    "validate:shared": "openapi-validator specs/shared/shared-components.yaml",
    "lint": "spectral lint specs/**/*.yaml",
    "lint:taxpayer": "spectral lint specs/taxpayer/taxpayer-api.yaml",
    "lint:income-tax": "spectral lint specs/income-tax/income-tax-api.yaml",
    "lint:payment": "spectral lint specs/payment/payment-api.yaml",
    "docs": "npm run docs:taxpayer && npm run docs:income-tax && npm run docs:payment",
    "docs:taxpayer": "redocly build-docs specs/taxpayer/taxpayer-api.yaml -o docs/taxpayer/index.html",
    "docs:income-tax": "redocly build-docs specs/income-tax/income-tax-api.yaml -o docs/income-tax/index.html",
    "docs:payment": "redocly build-docs specs/payment/payment-api.yaml -o docs/payment/index.html",
    "mock": "concurrently \"npm run mock:taxpayer\" \"npm run mock:income-tax\" \"npm run mock:payment\"",
    "mock:taxpayer": "prism mock specs/taxpayer/taxpayer-api.yaml -p 8081",
    "mock:income-tax": "prism mock specs/income-tax/income-tax-api.yaml -p 8082",
    "mock:payment": "prism mock specs/payment/payment-api.yaml -p 8083",
    "swagger": "swagger-ui-watcher specs/taxpayer/taxpayer-api.yaml specs/income-tax/income-tax-api.yaml specs/payment/payment-api.yaml",
    "test": "npm run test:unit && npm run test:property && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:property": "jest tests/property",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:acceptance": "cd tests/acceptance && npm test",
    "test:acceptance:headed": "cd tests/acceptance && npm run test:headed",
    "test:acceptance:ui": "cd tests/acceptance && npm run test:ui",
    "test:acceptance:install": "cd tests/acceptance && npm install && npx playwright install",
    "serve:docs": "docker-compose up docs"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@redocly/cli": "^1.10.0",
    "@stoplight/prism-cli": "^5.5.3",
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "ibm-openapi-validator": "^1.12.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-watcher": "^2.1.14",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "openapi",
    "rest-api",
    "domain-driven-design",
    "uk-tax",
    "multi-api",
    "hypermedia"
  ],
  "author": "",
  "license": "MIT"
}
