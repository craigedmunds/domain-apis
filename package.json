{
  "name": "domain-api-poc",
  "version": "1.0.0",
  "description": "Proof-of-concept for VPD (Vaping Products Duty) Submission Returns Domain API",
  "private": true,
  "scripts": {
    "validate": "node tools/validate.js",
    "validate:excise": "openapi-validator specs/vaping-duty/mocks/excise-api.yaml",
    "validate:customer": "openapi-validator specs/vaping-duty/mocks/customer-api.yaml",
    "validate:tax-platform": "openapi-validator specs/vaping-duty/mocks/tax-platform-api.yaml",
    "validate:mocks": "npm run validate:excise && npm run validate:customer && npm run validate:tax-platform",
    "lint": "spectral lint specs/**/*-api.yaml",
    "lint:excise": "spectral lint specs/vaping-duty/mocks/excise-api.yaml",
    "lint:customer": "spectral lint specs/vaping-duty/mocks/customer-api.yaml",
    "lint:tax-platform": "spectral lint specs/vaping-duty/mocks/tax-platform-api.yaml",
    "docs": "npm run docs:excise && npm run docs:customer && npm run docs:tax-platform",
    "docs:excise": "redocly build-docs specs/vaping-duty/mocks/excise-api.yaml -o docs/vaping-duty/mocks/excise/index.html",
    "docs:customer": "redocly build-docs specs/vaping-duty/mocks/customer-api.yaml -o docs/vaping-duty/mocks/customer/index.html",
    "docs:tax-platform": "redocly build-docs specs/vaping-duty/mocks/tax-platform-api.yaml -o docs/vaping-duty/mocks/tax-platform/index.html",
    "mock": "docker-compose up -d excise-mock customer-mock tax-platform-mock",
    "mock:stop": "docker-compose down",
    "mock:logs": "docker-compose logs -f excise-mock customer-mock tax-platform-mock",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:property": "jest tests/property --passWithNoTests",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:acceptance": "cd tests/acceptance/gateway && npm test",
    "test:acceptance:ui": "cd tests/acceptance/ui && npm test",
    "test:acceptance:install": "cd tests/acceptance/ui && npm install && npx playwright install",
    "serve:docs": "docker-compose up docs"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@redocly/cli": "^1.10.0",
    "@stoplight/prism-cli": "^5.5.3",
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "fast-xml-parser": "^5.3.3",
    "ibm-openapi-validator": "^1.12.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "openapi",
    "rest-api",
    "domain-api",
    "vaping-duty",
    "vpd",
    "hmrc",
    "excise"
  ],
  "author": "",
  "license": "MIT"
}
